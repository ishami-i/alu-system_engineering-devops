#!/usr/bin/env bash
# Script to install Nginx, start the server, and configure the root page to say 'Holberton School'

set -e

# Update and install Nginx
sudo apt-get update -y
sudo apt-get install -y nginx

# Ensure Nginx is started
sudo service nginx start

# Replace the default index files with the required content
echo "Holberton School" | sudo tee /var/www/html/index.html > /dev/null
echo "Holberton School" | sudo tee /var/www/html/index.nginx-debian.html > /dev/null

# Restart Nginx using service (systemctl is NOT allowed)
sudo service nginx restart
